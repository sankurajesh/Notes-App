{
  "compilerOptions": {
    "target": "ES2020",                  // ✅ Better async/await + modern JS
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",          // ✅ Fixes weird import errors
    "resolveJsonModule": true,           // ✅ For .env or config support
    "skipLibCheck": true,
    "sourceMap": true,                 // ✅ Prevents typing conflicts from node_modules
  },
  "include": ["src"],                    // ✅ Make sure only your code is compiled
  "exclude": ["node_modules", "dist"]
}
